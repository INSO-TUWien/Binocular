{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    
    /* Bundler mode */
    "moduleResolution": "bundler",

    /* Interop Constraints */
    "allowJs": true,
    "allowSyntheticDefaultImports": true, // TODO should not be true in the future!
    "strictBindCallApply": false, // TODO should be set to true!
  },
  "include": [
    "vite.config.ts",
    "vite.alias.ts"
  ]
}
